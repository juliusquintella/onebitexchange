<div class='exchange_box col-sm-12'>
  <div class='card'>

    <div class='card-header text-center'>
      Simule sua convers√£o
    </div>

    <div class='card-block'>
      <%= form_tag('/convert', method: :get, id: 'exchange_form') do %>
        <div class='local_currency'>
          <div class='form-group'>
            <p class='title'>Moeda Local</p>
            <small> 
              <span id="cotacao">  </span> 
            </small> 
            <%= select_tag 'source_currency', options_for_select(currency_list, 'USD'), class: 'form-control convert', id: 'source_currency' %>
          </div>

          <div class='form-group'>
            <input type='number' name='amount' id='amount' class='form-control convert' placeholder='Quantidade ($10)' step='any' required>
          </div>
        </div>
                    
        <div class='destination_currency'>
          <div class='form-group'>
            <p class='title'>Moeda Pretendida</p>
            <%= select_tag 'target_currency', options_for_select(currency_list, 'BRL'), class: 'form-control convert', id: 'target_currency'%>
          </div>
          <div class='form-group'>
            <input type='text' id='result' name='result' class='form-control' placeholder='Resultado' readonly>
          </div>
        </div>
        <div>
          <button type='button' id="invert" class='btn btn-exchange col-md-12'>INVERTER</button>
        </div>
      <% end %>
    </div>
  </div>
</div>